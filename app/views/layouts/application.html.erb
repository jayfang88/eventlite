<!DOCTYPE html>
<html>
  <head>
    <title>Eventlite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="icon" type="image/png" href="favicon.ico">

    <script type="text/javascript">
      window.githubURL = "<%= image_url('github-light.png') %>";
      window.linkedinURL = "<%= image_url('linkedin.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
    <script type='text/javascript' src='https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google[:api_key] %>&libraries=places'></script>
  </body>
</html>
